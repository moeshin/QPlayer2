    "module": "commonjs",
    "lib": ["ES6", "DOM"],
    "target": "ES5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
